# Application Settings
APP_NAME=AgenticGen
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=9000
WORKERS=1

# Database Settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=agenticgen
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI Settings
OPENAI_API_KEY=sk-
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# JWT Settings
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=txt,pdf,docx,doc,xlsx,xls,pptx,ppt,jpg,jpeg,png,gif

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Docker Settings
USE_DOCKER=false
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=agenticgen
MYSQL_USER=agenticgen
MYSQL_PASSWORD=agenticgen123